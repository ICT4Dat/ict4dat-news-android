<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools" android:id="@+id/nav_graph"
            app:startDestination="@id/actionNews">

    <fragment android:id="@+id/actionNews" android:name="at.ict4d.ict4dnews.screens.news.list.ICT4DNewsFragment"
              tools:layout="@layout/fragment_ictdnews_list"
              android:label="ICT4DNewsFragment">
        <action android:id="@+id/action_actionNews_to_ICT4DNewsDetailActivity"
                app:destination="@id/ICT4DNewsDetailActivity"/>
    </fragment>

    <fragment android:id="@+id/actionIct4d" android:name="at.ict4d.ict4dnews.screens.ict4d.TabbedICT4DFragment"
              tools:layout="@layout/fragment_tabbed_ict4d"
              android:label="ICT4DFragment"/>

    <fragment android:id="@+id/actionMore" android:name="at.ict4d.ict4dnews.screens.more.MoreFragment"
              tools:layout="@layout/fragment_more"
              android:label="MoreFragment"/>

    <activity android:id="@+id/ICT4DNewsDetailActivity"
              android:name="at.ict4d.ict4dnews.screens.news.detail.ICT4DNewsDetailActivity"
              android:label="content_ict4_dnews_detail" tools:layout="@layout/content_ict4_dnews_detail">
        <argument android:name="newsItem"
                  app:argType="at.ict4d.ict4dnews.models.News"/>
    </activity>
</navigation>